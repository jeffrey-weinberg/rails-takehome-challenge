<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Address</th>
      <th>Rent per floor</th>
      <th>Number of floors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.country %></td>
        <td><%= building.address %></td>
        <td><%= building.rent_per_floor %></td>
        <td><%= building.number_of_floors %></td>
        <td><%= link_to 'Show', building %></td>
      </tr>
    <% end %>
  </tbody>
</table>
