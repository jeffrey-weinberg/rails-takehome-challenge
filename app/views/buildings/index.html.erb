<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table class="table table-hover mb-4">
  <thead>
    <tr>
      <th>Name</th>
      <th>Companies</th>
      <th>Country</th>
      <th>Address</th>
      <th>Rent per floor</th>
      <th>Monthly Revenue</th>
      <th>Floors</th>
      <th>Available Floors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.name, building %></td>
        <td>
          <ul>
            <% building.companies.uniq.each do |company| %>
              <li><%= link_to company.name, company %></li>
            <% end %>
          </ul>
        </td>
        <td><%= building.country %></td>
        <td><%= building.address %></td>
        <td>$<%= building.rent_per_floor %>/month</td>
        <td>$<%= building.monthly_revenue %>/month</td>
        <td><%= building.number_of_floors %></td>
        <td><%= building.available_floors.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Company', new_company_path, class: "btn btn-primary" %>
